{
    "name": "Blockor Adblock",
    "version": "1.0.0",
    "manifest_version": 3,
    "description": "Blockor Adblock",
    "permissions": [
        "declarativeNetRequest",
        "declarativeNetRequestFeedback",
        "activeTab",
        "storage"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "scripts/background.js"
    },
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icons/16x16.png",
            "32": "icons/32x32.png",
            "48": "icons/48x48.png",
            "128": "icons/128x128.png"
        }
    },
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "block_ads",
                "enabled": true,
                "path": "rules.json"
            }
        ]
    }
}
